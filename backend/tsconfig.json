{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "incremental": true,
      "module": "commonjs",
      "noImplicitAny": false,
      "noLib": false,
      "noUnusedLocals": true,
      "outDir": "./dist",
      "paths": {
        "@app/*": ["src/*"],
        "@test/*": ["test/*"]
      },
      "removeComments": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "ES2021"
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  